@model AndromedaPatrimonio.Models.Empresa
@{
    ViewData["Title"] = "Seleciona Empresa";
}

<div class="modal-dialog" role="document" style="max-width: 500px">
    <div class="modal-content">
        <div class="modal-header">
            <h5 style="margin-right:auto;margin-left:auto" class="modal-title"><i class="fa fa-home"></i> Seleciona uma Empresa </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form class="modal-body">
            <div class="row">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-6" style="margin-left:auto;margin-right:auto">
                            <label asp-for="nome_fantasia" class="control-label"></label>
                            @Html.DropDownList("id", (SelectList)ViewBag.ViewEmpresasCadastradas, "- Selecione -", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div class="modal-footer" style="margin-top:15px">
            <button type="button" class="btn btn-success" onclick="salvaEmpresaSelecionada()"><i class="fa-solid fa fa-floppy-o"></i> Selecionar </button>
            <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa-solid fa fa-sign-out"></i> Sair</button>
        </div>
    </div>
</div>